<Ui xmlns="http://www.blizzard.com/wow/ui/" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://www.blizzard.com/wow/ui/ 
                   ..\..\FrameXML\UI.xsd">
  <Script File="RogueChat.lua"/>
  <Frame name="RogueChat">
   <Scripts>
    <OnLoad>LoadRogueChat(self);</OnLoad>
    <OnEvent>HandleEvents(self, event, ...);</OnEvent>
   </Scripts>
  </Frame>

  <Frame name="RogueChatUX" toplevel="true" enableMouse="true" movable="true" parent="UIParent">
    <Size x="105" y="110"/>
    <Anchors>
      <Anchor point="CENTER" relativePoint="CENTER" relativeTo="$parent"/>
    </Anchors>
    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
      <TileSize val="32"/>
      <EdgeSize val="32"/>
      <BackgroundInsets left="11" right="12" top="12" bottom="11"/>
    </Backdrop>
    <Layers>
      <Layer level="ARTWORK">
        <Texture name="$parent_HeaderTexture" file="Interface\DialogFrame\UI-DialogBox-Header">
          <Size x="190" y="64"/>
          <Anchors>
            <Anchor point="TOP">
              <Offset x="0" y="12"/>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
        <FontString name="$parent_Title" inherits="GameFontNormal" text="#$#! Rogues">
          <Anchors>
            <Anchor point="TOP">
              <Offset x="0" y="-2"/>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>self:RegisterForDrag("LeftButton");</OnLoad>
      <OnDragStart>self:StartMoving();</OnDragStart>
      <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
    </Scripts>
    <Frames>
      <Button name="IDiedButton" inherits="GameMenuButtonTemplate" virtual="true" hidden="false" text="I Died">
        <Size x="80" y="20"/>
        <Anchors>
          <Anchor point="TOP" relativePoint="TOP" relativeTo="$parent">
            <Offset x="0" y="-25"/>
          </Anchor>
        </Anchors>
        <Scripts>
         <OnClick>IDied();</OnClick>
        </Scripts>
      </Button>
      <Button name="YouDiedButton" inherits="GameMenuButtonTemplate" virtual="true" hidden="false" text="You Died">
        <Size x="80" y="20"/>
        <Anchors>
          <Anchor point="TOP" relativePoint="TOP" relativeTo="$parent">
            <Offset x="0" y="-50"/>
          </Anchor>
        </Anchors>
        <Scripts>
         <OnClick>YouDied();</OnClick>
        </Scripts>
      </Button>      
      <Button name="RandomButton" inherits="GameMenuButtonTemplate" virtual="true" hidden="false" text="Random">
        <Size x="80" y="20"/>
        <Anchors>
          <Anchor point="TOP" relativePoint="TOP" relativeTo="$parent">
            <Offset x="0" y="-75"/>
          </Anchor>
        </Anchors>
        <Scripts>
         <OnClick>SendRandomMessage();</OnClick>
        </Scripts>
      </Button>      
    </Frames>

  </Frame>

</Ui>